extends layout

block content
    div(id='app')
        div(class='form-box_register')
            el-form
                el-form-item(label='账号')
                    el-input(v-model='userName' type='text' placeholder='手机号码/邮箱地址')
                el-form-item(label='密码')
                    el-input(v-model='password' type='password' placeholder='字母开头，6-18位，只能包含字母、数字和下划线')
                el-form-item
                    el-button(type='primary' @click='register') 注册
                    el-button(type='text' @click='toLogin') 登录
    script.
      new Vue({
        el: '#app',
        data () {
          return {
            userName: '',
            password: ''
          }
        },
        create () {},
        methods: {
          register () {
            const _this = this
            $http.post('/api/user/register', {
              userName: this.userName,
              password: this.password
            }).then(function (res) {
              const resData = res.data
              if (resData.code === 200) {
                _this.$message(resData.msg)
              } else {
                _this.$message(resData.msg)
              }
              console.log(res.data)
            })
          },
          toLogin () {
            location.href = '/login'
          }
        }
      })
